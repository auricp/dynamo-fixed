{
  "name": "mcp-endpoint",
  "version": "1.0.0",
  "main": "endpoint.js",
  "type": "commonjs",
  "scripts": {
    "start": "node endpoint.js",
    "build": "npm run build:mcp-client && npm run build:mcp-dynamo",
